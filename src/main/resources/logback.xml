<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Disable Apache HttpClient wire-level debug -->
    <logger name="org.apache.hc.client5.http.wire" level="OFF"/>
    <logger name="org.apache.hc.client5.http.headers" level="WARN"/>
    <logger name="org.apache.hc.client5.http.impl.classic" level="WARN"/>
    <logger name="org.apache.hc.client5.http.impl.io" level="WARN"/>

    <!-- Optional: keep your app logs at info -->
    <logger name="com.caerus.audit.client" level="INFO"/>

</configuration>
